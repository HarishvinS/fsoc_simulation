# Environment configuration for FSOC Optimization System
# Copy this file to .env and customize as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Model Configuration
MODELS_DIR=models
DATA_DIR=backend/data
LOGS_DIR=logs

# Default simulation parameters
DEFAULT_WAVELENGTH_NM=1550
DEFAULT_TX_POWER_DBM=20
DEFAULT_RX_SENSITIVITY_DBM=-30

# Training configuration
DEFAULT_TRAINING_SAMPLES=1000
MODEL_TYPES=xgboost,random_forest

# Weather API configuration (for future real API integration)
WEATHER_API_KEY=your_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Google Elevation API (for future integration)
GOOGLE_ELEVATION_API_KEY=your_google_api_key_here

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security (for production deployment)
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for future persistent storage)
DATABASE_URL=sqlite:///fsoc_optimization.db

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0